{
  "name": "image-down",
  "version": "0.1.0",
  "description": "Yet another library / CLI tool to batch compress / downscale images.",
  "main": "dist/index.js",
  "bin": "dist/cli/index.js",
  "types": "src/global.d.ts",
  "scripts": {
    "lint": "eslint --ext .ts,.tsx ./src",
    "lint-staged": "lint-staged",
    "lint-staged:js": "eslint --ext .js,.jsx,.ts,.tsx ",
    "build": "npm run lint && tsc",
    "clean": "rm -rf dist/",
    "prepublishOnly": "npm run test && npm run build",
    "test": "jest src/tests",
    "prepare": "husky install"
  },
  "keywords": [
    "image",
    "image compression",
    "CLI",
    "image processing",
    "reduce resolution",
    "reduce size"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yinyanfr/image-down.git"
  },
  "bugs": {
    "url": "https://github.com/yinyanfr/image-down/issues"
  },
  "homepage": "https://github.com/yinyanfr/image-down#readme",
  "author": "Yan",
  "license": "MIT",
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": "npm run lint-staged:js",
    "**/*.{js,jsx,tsx,ts,less,md,json}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/args": "^5.0.0",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.1.4",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.3",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "args": "^5.0.3",
    "ora": "^5.4.1",
    "sharp": "^0.32.1"
  }
}
